<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TheDuellists" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/secondary_variant</item>
        <item name="colorPrimaryVariant">@color/secondary</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_variant</item>
        <item name="colorSecondaryVariant">@color/primary</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Radio buttons. -->
        <item name="radioButtonStyle">@style/Widget.Theduellists.CompoundButton.RadioButton</item>
        <!-- Text appearance style. -->
        <item name="textAppearanceBody1">@style/TextAppearance.Theduellists.Body1</item>
        <!-- Dark theme background -->
        <item name="backgroundColor">@color/black</item>
        <item name="backgroundTint">@color/primary</item>
    </style>
</resources>