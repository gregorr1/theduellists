<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text Appearance Body1 style -->
    <style name="TextAppearance.Theduellists.Body1"
        parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">14sp</item>
    </style>

    <!-- TextView style -->
    <style name="Widget.Theduellists.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
    </style>

    <!-- Turn label style -->
    <style name="Widget.Theduellists.TextView.TurnLabel" parent="Widget.Theduellists.TextView">
        <item name="textAllCaps">true</item>
        <item name="android:padding">8dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Top row style -->
    <style name="Widget.Theduellists.TextView.TopRow" parent="Widget.Theduellists.TextView">
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <!-- Middle row style -->
    <style name="Widget.Theduellists.TextView.MiddleRow" parent="Widget.Theduellists.TextView">
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <!-- Bottom row style -->
    <style name="Widget.Theduellists.TextView.BottomRow" parent="Widget.Theduellists.TextView">
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <!-- Table item style -->
    <style name="Widget.Theduellists.TextView.TableItem" parent="Widget.Theduellists.TextView">
        <item name="android:padding">@dimen/table_padding</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Radio Button style -->
    <style name="Widget.Theduellists.CompoundButton.RadioButton"
        parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>